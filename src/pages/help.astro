---
import { AvBreadcrumb, AvButton, AvCard, AvContainer } from "@ansiversa/components";
import AppShell from "../layouts/AppShell.astro";

const title = "Help – App Starter";
const description = "Learn how to use the starter app and where to customize it.";
---

<AppShell title={title} description={description}>
  <section class="av-faq-public__crumb">
    <AvContainer>
      <AvBreadcrumb items={[{ label: "Home", href: "/" }, { label: "Help" }]} />
    </AvContainer>
  </section>

  <section class="av-section">
    <AvContainer>
      <div class="av-auth-stack-lg">
        <AvCard className="av-auth-stack-md">
          <div>
            <p class="av-kicker">App Starter</p>
            <h1 class="av-section-title">Help</h1>
            <p class="av-text-soft">
              This starter shows the standard Ansiversa integrations and patterns you should reuse
              in every mini-app.
            </p>
          </div>
          <div class="av-row-wrap">
            <AvButton href="/items">Go to items</AvButton>
          </div>
        </AvCard>

        <AvCard variant="soft" className="av-auth-stack-md">
          <div class="av-auth-stack-sm">
            <h2 class="av-card-heading">How to start</h2>
            <div class="av-auth-stack-xs">
              <p class="av-text-soft">• Review the Example Items module.</p>
              <p class="av-text-soft">• Study the auth, billing, and webhook helpers.</p>
              <p class="av-text-soft">• Replace the module with your real app.</p>
            </div>
          </div>
        </AvCard>

        <AvCard variant="soft" className="av-auth-stack-md">
          <div class="av-auth-stack-sm">
            <h2 class="av-card-heading">Key features</h2>
            <div class="av-auth-stack-xs">
              <p class="av-text-soft">• `requirePro` guard and paywall UI pattern.</p>
              <p class="av-text-soft">• Dashboard summary + activity webhook helpers.</p>
              <p class="av-text-soft">• Notifications helper and shared layouts.</p>
            </div>
          </div>
        </AvCard>

        <AvCard variant="soft" className="av-auth-stack-md">
          <div class="av-auth-stack-sm">
            <h2 class="av-card-heading">Free vs Pro</h2>
            <div class="av-auth-stack-xs">
              <p class="av-text-soft">• Free: Base example CRUD flows.</p>
              <p class="av-text-soft">• Pro: Demonstrates PAYMENT_REQUIRED gating.</p>
            </div>
          </div>
        </AvCard>

        <AvCard variant="soft" className="av-auth-stack-md">
          <div class="av-auth-stack-sm">
            <h2 class="av-card-heading">Troubleshooting</h2>
            <div class="av-auth-stack-xs">
              <p class="av-text-soft">• Enable DEV_BYPASS_AUTH if you lack a session cookie.</p>
              <p class="av-text-soft">• Ensure env vars are set before build.</p>
            </div>
          </div>
        </AvCard>
      </div>
    </AvContainer>
  </section>
</AppShell>
