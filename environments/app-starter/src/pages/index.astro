---
import AppShell from "../layouts/AppShell.astro";
import {
  AvContainer,
  AvCard,
  AvButton,
  AvFeatureList,
  AvFeatureItem
} from "@ansiversa/components";
---

<AppShell title="Ansiversa App Starter" description="A starter template using shared Ansiversa components.">
  <AvContainer class="as-section">
    <AvCard>
      <h1 class="as-title">ðŸš€ Welcome to Ansiversa App Starter</h1>

      <p class="as-body">
        This project uses the shared <code>@ansiversa/components</code> package with
        global layouts, styles, and premium UI components.
      </p>

      <AvButton>Get Started</AvButton>
    </AvCard>
  </AvContainer>

  <AvContainer class="as-feature-section">
    <AvFeatureList>
      <AvFeatureItem title="Shared Layouts" description="Uses WebLayout and AuthLayout from the package." />
      <AvFeatureItem title="Design System" description="Imports global.css from the components library." />
      <AvFeatureItem title="100% Consistency" description="All Ansiversa apps follow the same standard." />
    </AvFeatureList>
  </AvContainer>
</AppShell>

<style>
  .as-section {
    margin-top: 2.5rem;
  }

  .as-title {
    margin-bottom: 1.5rem;
    font-size: 1.875rem;
    font-weight: 600;
  }

  .as-body {
    margin-bottom: 1.5rem;
  }

  .as-feature-section {
    margin-top: 4rem;
  }
</style>
